<html>
<head>
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
  <link rel="icon" type="image/png" href="../img/favicon.png" />
  <link rel="shortcut icon" type="image/png" href="img/favicon.png" />
  <title>Glimpse</title>
  <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <meta name="viewport" content="width=device-width" />
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.5/css/materialize.min.css">
  <style>
    body {
      display: flex;
      min-height: 100vh;
      flex-direction: column;
    }
    main {
      flex: 1 0 auto;
    }
    body {
      background: #fff;
    }
    .input-field input[type=date]:focus + label,
    .input-field input[type=text]:focus + label,
    .input-field input[type=email]:focus + label,
    .input-field input[type=password]:focus + label {
      color: green;
    }
    .input-field input[type=date]:focus,
    .input-field input[type=text]:focus,
    .input-field input[type=email]:focus,
    .input-field input[type=password]:focus {
      border-bottom: 2px solid green;
      box-shadow: none;
    }
    .error{
      color: red;
    }
  </style>
</head>
<body>
  <div class="section"></div>
  <main>
    <center>
      <h3 class="purple-text darken-3">Register</h3>
      <div class="section">
        <% if(hasError) { %>
      <div class="row">
        <div class="error">
          <% for(var item in error) { %>
            <ul>
            <% for(var i = 0; i < error[item].length; i++) { %>
                <li>
                  <i>
                    <%= error[item][i].message %>
                  </i>
                </li>
            <% } %>
            </ul>
          <% } %>
        </div>
      </div>
    <% } %>
  </div>
      <div class="container">
        <div class="z-depth-1 grey lighten-4 row" style="display: inline-block; padding: 32px 48px 0px 48px; border: 1px solid #EEE;">
          <form class="col s12" action="/auth/signup" method="post">
            <div class='row'>
              <div class='col s12'>
              </div>
            </div>
            <div class='row'>
              <div class='input-field col s12'>
                <input class='validate' type='email' name='email' id='email' required/>
                <label for='email'>Enter your email</label>
              </div>
            </div>
            <div class='row'>
              <div class='input-field col s12'>
                <input class='validate' type='password' name='password' id='password' required/>
                <label for='password'>Enter your password</label>
              </div>
              <label style='float: right;'>
								<a class='purple-text darken-3' onclick="Materialize.toast('Make it long and put some numbers in it', 4000)"><b>Password requirements</b></a>
							</label>
            </div>
            <br />
            <center>
              <div class='row'>
                <button type='submit' class='col s12 btn btn-large waves-effect green darken-3'>Register</button>
              </div>
            </center>
          </form>
        </div>
      </div>
      <a href="/" class="purple-text darken-3">Home</a>
    </center>
    <div class="section"></div>
    <div class="section"></div>
  </main>
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.2.1/jquery.min.js"></script>
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.5/js/materialize.min.js"></script>
  <script>
  var message = $( '.error' );
  if ( message.length ) {
    setTimeout( function() {
        message.fadeOut( 'slow' );
    }, 3000 );
}
  </script>
</body>
</html>
