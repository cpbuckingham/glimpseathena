<!doctype html>
<html lang="en">

<% include ../partials/head %>

	<body>

		<div class="wrapper">
			<div class="sidebar" data-color="green" data-image="../img/sidebar-1.jpg">

				<div class="logo">
					<a href="/auth/dashboard" class="simple-text">
					Glimpse
				</a>
				</div>

				<div class="sidebar-wrapper">
					<ul class="nav">
						<li>
							<a href="/auth/dashboard">
								<i class="material-icons">dashboard</i>
								<p>Dashboard</p>
							</a>
						</li>
						<li>
							<a href="/auth/user">
								<i class="material-icons">person</i>
								<p>User Profile</p>
							</a>
						</li>
						<li class="active">
							<a href="/auth/patients">
								<i class="material-icons">content_paste</i>
								<p>Patients</p>
							</a>
						</li>
						<li>
							<a href="/auth/surveys">
								<i class="material-icons">library_books</i>
								<p>Surveys</p>
							</a>
						</li>
						<li>
							<a href="/auth/submissions">
								<i class="material-icons">message</i>
								<p>Submissions</p>
							</a>
						</li>
						<li class="active-pro">
							<a href="/auth/logout">
								<i class="material-icons">unarchive</i>
								<p>Logout</p>
							</a>
						</li>
					</ul>
				</div>
			</div>

			<div class="main-panel">
				<nav class="navbar navbar-transparent navbar-absolute">
					<div class="container-fluid">
						<div class="navbar-header">
							<button type="button" class="navbar-toggle" data-toggle="collapse">
								<span class="sr-only">Toggle navigation</span>
								<span class="icon-bar"></span>
								<span class="icon-bar"></span>
								<span class="icon-bar"></span>
							</button>
							<a href="/auth/patients" class="navbar-brand">
								<% if (!user.username){%>
									Welcome,
									<%= user.email%>
										<% }else{ %>
											Welcome,
											<%= user.username%>
												<% } %>
							</a>
						</div>
						<div class="collapse navbar-collapse">
							<ul class="nav navbar-nav navbar-right">
								<li class="dropdown">
									<a href="#" class="dropdown-toggle" data-toggle="dropdown">
										<i class="material-icons">library_books</i>
										<% unread.forEach(function (notifcations) { %>
											<% if(notifcations.read === false) { %>
												<span class="notification"></span>
												<% } %>
													<% }) %>
														<p class="hidden-lg hidden-md">Notifications</p>
									</a>
									<ul class="dropdown-menu">
										<li><a href="/auth/submissions">You have <%=unread.length%> new Submission(s)</a></li>
									</ul>
								</li>
							</ul>

							<form class="navbar-form navbar-right" role="search">
								<div class="form-group  is-empty">
									<input type="text" class="form-control" placeholder="Search">
									<span class="material-input"></span>
								</div>
								<button type="submit" class="btn btn-white btn-round btn-just-icon">
									<i class="material-icons">search</i><div class="ripple-container"></div>
								</button>
							</form>
						</div>
					</div>
				</nav>

				<div class="content">
					<div class="container-fluid">
						<div class="row">
							<div class="col-md-12">
								<div class="card">
									<div class="card-header" data-background-color="green">
										<h4 class="title">New Email Intro</h4>
										<p class="category">Send an introduction email to a Patient</p>
									</div>
									<div class="card-content">
										<form action="/email/<%=patient.id%>" method="post">
											<div class="row">
												<div class="col-md-6">
													<div class="form-group label-floating">
														<label class="control-label">Full Name</label>
														<input type="text" name="full_name" class="form-control" value="<%= patient.full_name%>" required>
													</div>
												</div>
												<div class="col-md-6">
													<div class="form-group label-floating">
														<label class="control-label">Email</label>
														<input type="text" name="email" class="form-control" value="<%= patient.email%>" required>
													</div>
												</div>
											</div>

											<div class="row">
												<div class="col-md-12">
													<div class="form-group label-floating">
														<label class="control-label">Message</label>
														<textarea class="form-control" name="message" rows="5" required>
Hello <%=patient.full_name%>,

Welcome to Glimpse. An app that connects me(your doctor) to you. I already set you up in our system. Please submit your information with your email and password whenever notifications are sent.

Username: your email
Password: password123

Thank you,
Doctor <%= user.first_name%> <%= user.last_name%>
                            </textarea>
													</div>
												</div>
											</div>


											<button type="submit" class="btn btn-success pull-right">Submit</button>
											<div class="clearfix"></div>
										</form>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>

	</body>

	<script src="../js/jquery-3.1.0.min.js" type="text/javascript"></script>
	<script src="../js/bootstrap.min.js" type="text/javascript"></script>
	<script src="../js/material.min.js" type="text/javascript"></script>
	<script src="../js/chartist.min.js"></script>
	<script src="../js/bootstrap-notify.js"></script>
	<script src="../js/material-dashboard.js"></script>
	<script src="../js/demo.js"></script>

</html>
