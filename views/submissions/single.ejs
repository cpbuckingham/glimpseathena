<!doctype html>
<html lang="en">

<head>
	<meta charset="utf-8" />
	<link rel="apple-touch-icon" sizes="76x76" href="../img/apple-icon.png" />
	<link rel="icon" type="image/png" href="../img/favicon.png" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

	<title>Glimpse</title>

	<meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <meta name="viewport" content="width=device-width" />


    <!-- Bootstrap core CSS     -->
		<link href="../../../css/bootstrap.min.css" rel="stylesheet" />

    <!--  Material Dashboard CSS    -->
    <link href="../../css/material-dashboard.css" rel="stylesheet"/>

    <!--  CSS for Demo Purpose, don't include it in your project     -->
    <link href="../../css/demo.css" rel="stylesheet" />

    <!--     Fonts and icons     -->
    <link href="http://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" rel="stylesheet">
    <link href='http://fonts.googleapis.com/css?family=Roboto:400,700,300|Material+Icons' rel='stylesheet' type='text/css'>
</head>

<body>

	<div class="wrapper">
	    <div class="sidebar" data-color="red" data-image="../img/sidebar-1.jpg">

			<div class="logo">
				<a href="/auth/dashboard" class="simple-text">
						Glimpse
				</a>
			</div>

			<div class="sidebar-wrapper">
						<ul class="nav">
								<li>
									<a href="/auth/dashboard">
												<i class="material-icons">dashboard</i>
												<p>Dashboard</p>
										</a>
								</li>
								<li>
										<a href="/auth/user">
												<i class="material-icons">person</i>
												<p>User Profile</p>
										</a>
								</li>
                <li>
										<a href="/auth/patients">
												<i class="material-icons">content_paste</i>
												<p>Patients</p>
										</a>
								</li>
								<li>
										<a href="/auth/surveys">
											<i class="material-icons">library_books</i>
												<p>Surveys</p>
										</a>
								</li>
                <li class="active">
										<a href="/auth/submissions">
											<i class="material-icons">message</i>
												<p>Submissions</p>
										</a>
								</li>
				<li class="active-pro">
					<a href="/auth/logout">
							<i class="material-icons">unarchive</i>
							<p>Logout</p>
										</a>
								</li>
						</ul>
			</div>
	    </div>

	    <div class="main-panel">
				<nav class="navbar navbar-transparent navbar-absolute">
					<div class="container-fluid">
						<div class="navbar-header">
							<button type="button" class="navbar-toggle" data-toggle="collapse">
								<span class="sr-only">Toggle navigation</span>
								<span class="icon-bar"></span>
								<span class="icon-bar"></span>
								<span class="icon-bar"></span>
							</button>
							<a href="/auth/submissions"class="navbar-brand">
								<% if (!user.username){%>
	              Welcome, <%= user.email%>
	              <% }else{ %>
	              Welcome, <%= user.username%>
	              <% } %>
							</a>
						</div>
						<div class="collapse navbar-collapse">
							<ul class="nav navbar-nav navbar-right">
                <li class="dropdown">
  								<a href="#" class="dropdown-toggle" data-toggle="dropdown">
  									<i class="material-icons">library_books</i>
                    <% unread.forEach(function (notifcations) { %>
                    <% if(notifcations.read === false) { %>
                        <span class="notification"><%=unread.length%></span>
                        <% } %>
                        <% }) %>
  									<p class="hidden-lg hidden-md">Notifications</p>
  								</a>
  								<ul class="dropdown-menu">
  									<li><a href="/auth/submissions">You have <%=unread.length%> new Submission(s)</a></li>
  								</ul>
  							</li>
							</ul>

							<form class="navbar-form navbar-right" role="search">
								<div class="form-group  is-empty">
		                        	<input type="text" class="form-control" placeholder="Search">
		                        	<span class="material-input"></span>
								</div>
								<button type="submit" class="btn btn-white btn-round btn-just-icon">
									<i class="material-icons">search</i><div class="ripple-container"></div>
								</button>
		                    </form>
						</div>
					</div>
				</nav>

	        <div class="content">
	            <div class="container-fluid">
	                <div class="row">
                    <div class="col-md-8">
                        <div class="card">
                            <div class="card-header" data-background-color="red">
                                <h4 class="title">Patient Submission</h4>
                <p class="category">View a submission from a patient</p>
                            </div>
                            <div class="card-content">
                                <div class="row">
                                  <div class="col-md-6">
                <div class="form-group label-floating">
                  <label class="control-label">Survey Type</label>
                  <p><%=submission.type%></p>
                </div>
                                  </div>

                                  <div class="row">
                                      <div class="col-md-6">
                    <div class="form-group label-floating">
                      <label class="control-label">Time Submitted</label>
                      <p><%=submission.updated_at%></p>
                    </div>
                                      </div>
                                    </div>
                              </div>

                                      <div class="row">
                                          <div class="col-md-12">
                        <div class="form-group label-floating">
                          <label class="control-label">Question 1 - <%=submission.question_1%></label>
                          <p><%=submission.answer_1%></p>
                        </div>
                                          </div>
                                        </div>

                                        <div class="row">
                          <div class="col-md-12">
                            <div class="form-group label-floating">
                              <label class="control-label">Question 2 - <%=submission.question_2%></label>
                              <p><%=submission.answer_2%></p>
                            </div>
                          </div>
                        </div>

                                    <div class="row">
                                        <div class="col-md-12">
                                          <div class="form-group label-floating">
                                            <label class="control-label">Question 3 - <%=submission.question_3%></label>
                                            <p><%=submission.answer_3%></p>
                                          </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-12">
                                          <div class="form-group label-floating">
                                            <label class="control-label">Question 4 - <%=submission.question_4%></label>
                                            <p><%=submission.answer_4%></p>
                                          </div>
                                        </div>
                                      </div>

                                      <div class="row">
                                        <div class="col-md-12">
                                          <div class="form-group label-floating">
                                            <label class="control-label">Question 5 - <%=submission.question_5%></label>
                                            <p><%=submission.answer_5%></p>
                                          </div>
                                        </div>
                                      </div>
                                      <form action="/submissions/<%=submission.id%>?_method=PUT" method="POST">
        																<input type="submit"class="btn btn-danger" value="Mark as Read">
        															</form>
                                <div class="clearfix"></div>
                            </div>
                        </div>
                    </div>
											<div class="col-md-4">
													<div class="card card-profile">
														<div class="card-avatar">
																<img class="img" src="<%=patient.avatar%>" />
														</div>

														<div class="content">
															<h6 class="category text-gray"><%=patient.full_name%></h6>
															<h4 class="card-title"><%=patient.email%></h4>
															<p class="card-content"><%=patient.address%>
                              <%=patient.city%>, <%=patient.state%> <%=patient.postal_code%></p>
															<form action="/submissions/<%=submission.id%>?_method=DELETE" method="POST">
																<input type="submit" onclick="return confirm('Are you sure you want to delete this Submission?');" class="btn btn-danger" value="Delete Submission">
															</form>


														</div>
													</div>
												</div>
	                </div>
	            </div>
	        </div>
	    </div>
	</div>

</body>

<!--   Core JS Files   -->
<script src="../../js/jquery-3.1.0.min.js" type="text/javascript"></script>
<script src="../../js/bootstrap.min.js" type="text/javascript"></script>
<script src="../../js/material.min.js" type="text/javascript"></script>

<!--  Charts Plugin -->
<script src="../../js/chartist.min.js"></script>

<!--  Notifications Plugin    -->
<script src="../../js/bootstrap-notify.js"></script>

<!--  Google Maps Plugin    -->
<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js"></script>

<!-- Material Dashboard javascript methods -->
<script src="../../js/material-dashboard.js"></script>

<!-- Material Dashboard DEMO methods, don't include it in your project! -->
<script src="../../js/demo.js"></script>

</html>
